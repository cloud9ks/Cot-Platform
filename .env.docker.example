# ============================
# COT PLATFORM - Docker Environment Variables
# ============================
# Copia questo file in .env e compila con i tuoi valori reali

# Database PostgreSQL
DB_PASSWORD=SuperSecurePassword123!

# Flask Secret Key (genera uno nuovo con: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# OpenAI API Key (per analisi GPT)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stripe (per pagamenti - opzionale)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# TwelveData API Key (per dati finanziari - opzionale)
TWELVE_DATA_API_KEY=your_twelve_data_api_key

# Admin User (primo accesso)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Flask Environment
FLASK_ENV=production
